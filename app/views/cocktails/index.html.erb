<div class="container">

  <h1>Cocktails</h1>

  <p>
    <div class="link">
      <%= link_to '+ Add a cocktail', new_cocktail_path %>
    </div>
  </p>

  <div class="card-box">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 18rem;" background>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </h5>
          <h6 class="card-subtitle mb-2 text-muted"></h6>
          <p class="card-text">
          </p>
        </div>
      </div>
    <% end %>
  </div>



</div>

